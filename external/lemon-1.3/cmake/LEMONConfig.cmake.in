SET(LEMON_INCLUDE_DIRS "@PROJECT_SOURCE_DIR@;@PROJECT_BINARY_DIR@" CACHE PATH "LEMON include directories")

IF(UNIX)
  SET(LEMON_LIB_NAME "libemon.a")
ELSEIF(WIN32)
  SET(LEMON_LIB_NAME "lemon.lib")
ENDIF(UNIX)

